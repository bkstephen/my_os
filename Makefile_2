ASM=nasm

SRC_DIR=src
BUILD_DIR=build

$(BUILD_DIR)/main_floppy.img: $(BUILD_DIR)/basic_boot.bin
	cp $(BUILD_DIR)/main.bin $(BUILD_DIR)/basic_boot.img
	truncate -s 1440k $(BUILD_DIR)/basic_boot.img
    
$(BUILD_DIR)/main.bin: $(SRC_DIR)/basic_boot.asm
	$(ASM) $(SRC_DIR)/basic_boot.asm -f bin -o $(BUILD_DIR)/basic_boot.bin
